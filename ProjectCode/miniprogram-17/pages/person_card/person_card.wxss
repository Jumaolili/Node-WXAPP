/* pages/person_card/person_card.wxss */

/* container */
.container {
  width: 100%;
  height: 100vh;
  background-color: orange;
  /* box */
  padding: 0 0;
}

/* top   */

.top {
  /* content */
  height: 60rpx;
  width: 100%;
  background-color: orange;
}

.return {
  /* content */
  background-color: orange;
  /* text */
  font-size: larger;
  font-weight: bolder;
  color: white;
}

.top-title {
  /* position */
  position: relative;
  top:0;
  left: 25%;
  /* contetn */
  height: 80rpx;
  /* text */
  color: white;
  font-weight:bolder;
  font-size: larger;
  line-height:80rpx
  /*  */
}

/* 头像 */
.img {
  /* content */
  background-color: orange;
  width: 100%;
}

.img-content {
  /* content */
  height: 170rpx;
  width: 170rpx;
  border-radius: 85rpx;
  margin-left: 40%;
}


/* middle */
.middle {
  /* content */
  background-color: orange;
  width: 100%;
}


.item {
  /* content */
  /* position */
  overflow: auto;
  /* box */

  margin-bottom: 50rpx;
  /* text */
  color: white;
  font-size: larger;
  font-weight: bolder;
  text-align: center;
}

.item-title {
  /* postion */
  float: left;
}

.item-content {
  /* postion */
  float: right;
}

/* bottom */

.bottom {
  /* position */
  display: flex;
  flex-direction: row;
  /* content */
  height: 100rpx;
  width: 100%;
}

.bottom-btn {
  /* text */
  font-size: larger;
  font-weight: bolder;
  color: white;
  text-align: center;
  border: 5rpx solid white;
  border-radius: 30rpx;
  /* position */
  flex: 1;
}